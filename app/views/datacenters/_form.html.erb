<%= form_with(model: datacenter, local: true) do |form| %>
  <% if datacenter.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(datacenter.errors.count, "error") %> prohibited this datacenter from being saved:</h2>

      <ul>
        <% datacenter.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :code %>
    <%= form.text_field :code %>
  </div>

  <div class="field">
    <%= form.label :servers_available %>
    <%#= form.check_box :servers_available %>
    <%#= form.select(:active, options_for_select([[true, true], [false, false]], {:selected => @datacenter.active}),:prompt => "Select") %>
    <%= form.select :servers_available, options_for_select([['Yes', true], ['No', false]], :selected => form.object.servers_available)%>


  </div>

  <div class="field">
    <%= form.label :servers_capacity %>
    <%= form.number_field :servers_capacity %>
  </div>

  <div class="field">
    <%= form.label :country_id %>
    <%#= form.text_field :country_id %>
    <%= form.collection_select(:country_id, Country.all, :id, :name,
      {} ) %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
