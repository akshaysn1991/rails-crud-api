<p id="notice"><%= notice %></p>

<div class="row">
  <div class="col-md-9 float-left"><h1>Data Centers</h1></div>
  <div class="col-md-3 create-btn">
    <%= link_to 'New Data Center', new_datacenter_path, class: 'btn btn-info btn-lg' %>
  </div>
</div>

<hr>
<table class="table table-striped table-bordered">
  <thead>
    <tr>
      <th>Code</th>
      <th>Servers Available</th>
      <th>Servers Capacity</th>
      <th>Country</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @datacenters.each do |datacenter| %>
      <tr>
        <td><%= datacenter.code %></td>
        <td><%= datacenter.servers_available.humanize %></td>
        <td><%= datacenter.servers_capacity %></td>
        <td><%= datacenter.country.name %></td>
        <td><%= link_to 'Show', datacenter, class: "btn btn-success btn-sm" %></td>
        <td><%= link_to 'Edit', edit_datacenter_path(datacenter), class: "btn btn-warning btn-sm" %></td>
        <td><%= link_to 'Destroy', datacenter, class: "btn btn-danger btn-sm", method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


