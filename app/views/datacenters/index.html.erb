<p id="notice"><%= notice %></p>

<h1>Datacenters</h1>

<table>
  <thead>
    <tr>
      <th>Code</th>
      <th>Servers Available</th>
      <th>Servers Capacity</th>
      <th>Country</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @datacenters.each do |datacenter| %>
      <tr>
        <td><%= datacenter.code %></td>
        <td><%= datacenter.servers_available.humanize %></td>
        <td><%= datacenter.servers_capacity %></td>
        <td><%= datacenter.country.name %></td>
        <td><%= link_to 'Show', datacenter %></td>
        <td><%= link_to 'Edit', edit_datacenter_path(datacenter) %></td>
        <td><%= link_to 'Destroy', datacenter, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

