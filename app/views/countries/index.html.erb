<p id="notice"><%= notice %></p>

<div class="row">
  <div class="col-md-9 float-left"><h1>Countries</h1></div>
  <div class="col-md-3 create-btn pull-right">
    <%= link_to 'Create Country', new_country_path, class: 'btn btn-info btn-lg' %>
  </div>
</div>

<hr>
<table class="table table-striped table-bordered">
  <thead>
    <tr>
      <th>Name</th>
      <th>Language</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @countries.each do |country| %>
      <tr>
        <td><%= country.name %></td>
        <td><%= country.language.name %></td>
        <td><%= link_to 'Show', country, class: "btn btn-success btn-sm" %></td>
        <td><%= link_to 'Edit', edit_country_path(country), class: "btn btn-warning btn-sm" %></td>
        <td><%= link_to 'Destroy', country, method: :delete, class: "btn btn-danger btn-sm", data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
