<p id="notice"><%= notice %></p>

<div class="row">
  <div class="col-md-5 float-left"><h1>Languages</h1></div>
  <div class="col-md-3">
    <%= link_to 'Create Langauage', new_language_path, class: 'btn btn-info btn-lg' %>
  </div>
</div>

<hr>
<table class="table table-striped table-bordered col-md-8">
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @languages.each do |language| %>
      <tr>
        <td><%= language.name %></td>
        <td><%= link_to 'Show', language, class: "btn btn-success btn-sm"  %></td>
        <td><%= link_to 'Edit', edit_language_path(language), class: "btn btn-warning btn-sm"  %></td>
        <td><%= link_to 'Destroy', language, method: :delete, class: "btn btn-danger btn-sm", data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
